{{> client_sidebar }}
<div class="main-content">
  <header class="top-main">
    <p class="curr-date">1/1/2024</p>
    <div class="search-bar">
      <i class='bx bx-search-alt'></i>
      <form role="search">
        <input type="text" name="" id="" placeholder="Tìm kiếm sản phẩm">
      </form>
    </div>
  </header>
  <section class="categories">
    <div class="filter-btn">
      <input type="radio" name="categories" id="all" value="Tất cả" checked>
      <label for="all">Tất cả</label>
    </div>
    {{#each type}}
    <div class="filter-btn">
      <input type="radio" name="categories" id='{{this.MaLoai}}' value='{{this.TenLoai}}'>
      <label for='{{this.MaLoai}}'>{{this.TenLoai}}</label>
    </div>
    {{/each}}
  </section>
  <section class="order-space">
    <h2>Chọn món</h2>
    <section class="card-container" id="card-container">

    </section>
    <section id="pagination">
        <button id="previous-page">
          <i class='bx bxs-chevron-left'>
          </i>
        </button>
        <div id="page-container">

        </div>
      
        <button id="next-page"> 
          <i class='bx bxs-chevron-right'></i>
        </button>
      
    </section>
  </section>
</div>
{{> order}}
<script src="/js/home.js"></script>