<aside class="sidebar">
    <section class="top-sidebar">
        <div class="logo-container">
            <div class="logo">
                <img src="/img/logo_hcmus.png" alt="hcmus logo">
            </div>
            <div class="logo-title">
                <h1>HCMUS</h1>
                <h1>CANTEEN</h1>
            </div>

        </div>
        <button id="menu-btn">
            <i class='bx bx-menu'></i>
        </button>
    </section>
    <ul class="item-container">
        <li>
            <a href="/home" class="nav-item {{#if isHome}} active {{/if}}">
                <i class='bx bx-home'></i>
                <p class="open">Trang chủ</p>
            </a>
        </li>
        <li>
            <a href="/user/bill" class="nav-item {{#if isBill}} active {{/if}}">
                <i class='bx bx-money-withdraw'></i>
                <p class="open">Hóa đơn</p>
            </a>
        </li>
    </ul>
    <section class="user-container">
        <a class="user" href="/user/profile">
            <img src="" alt="" class="avatar">
            <p class="open">{{username}}</p>
        </a>
        <form action="/logout" method="post">
            <button type="submit" class="logout-btn" style="cursor: pointer;">
                <i class='bx bx-log-out'></i>
                <p class="open">Đăng xuất</p>
            </button>
        </form>
    </section>
</aside>
<script src="/js/sidebar.js"></script>